<%= form_tag("/account/set_arthist/#{@arthist.id}" )do %>
<div id="center">
  <div id="setting_back">
    <p id="update_title"><%= @arthist.arthist %></p>
    <p>ボーカル</p>
    <input type="radio" name="gender" id="" value= "1" <%= checked="checked" if @arthist.gender == 1 %>>男性
    <input type="radio" name="gender" id="" value= "2" <%= checked="checked" if @arthist.gender == 2 %>>女性

    <p>声の高さ</p>
    <div>低い</div>
    <div>
      <input type="radio" name="voice" value="1" <%= checked="checked" if @arthist.voice == 1 %>>
      <input type="radio" name="voice" value="2" <%= checked="checked" if @arthist.voice == 2 %>>
      <input type="radio" name="voice" value="3" <%= checked="checked" if @arthist.voice == 3 %>>
      <input type="radio" name="voice" value="4" <%= checked="checked" if @arthist.voice == 4 %>>
      <input type="radio" name="voice" value="5" <%= checked="checked" if @arthist.voice == 5 %>>
    </div>
    <div>高い</div>

    <p>曲の長さ</p>
    <div>短い</div>
    <div>
      <input type="radio" name="length" value="1" <%= checked="checked" if @arthist.length == 1 %>>
      <input type="radio" name="length" value="2" <%= checked="checked" if @arthist.length == 2 %>>
      <input type="radio" name="length" value="3" <%= checked="checked" if @arthist.length == 3 %>>
      <input type="radio" name="length" value="4" <%= checked="checked" if @arthist.length == 4 %>>
      <input type="radio" name="length" value="5" <%= checked="checked" if @arthist.length == 5 %>>
    </div>
    <div>長い</div>

    <p>歌詞</p>
    <div>日本語</div>
    <div>
      <input type="radio" name="lyrics" value="1" <%= checked="checked" if @arthist.lyrics == 1 %>>
      <input type="radio" name="lyrics" value="2" <%= checked="checked" if @arthist.lyrics == 2 %>>
      <input type="radio" name="lyrics" value="3" <%= checked="checked" if @arthist.lyrics == 3 %>>
      <input type="radio" name="lyrics" value="4" <%= checked="checked" if @arthist.lyrics == 4 %>>
      <input type="radio" name="lyrics" value="5" <%= checked="checked" if @arthist.lyrics == 5 %>>
    </div>
    <div>英語</div>

    <p>ジャンル</p>
    <select name="genre1" id="genre1">
      <option value="0"></option>
      <option value="J-ROCK" <%= selected="selected" if @arthist.genre1 == "J-ROCK" %>>J-ROCK</option>
      <option value="J-POP" <%= selected="selected" if @arthist.genre1 == "J-POP" %>>J-POP</option>
      <option value="ROCK" <%= selected="selected" if @arthist.genre1 == "ROCK" %>>ROCK</option>
      <option value="POPS" <%= selected="selected" if @arthist.genre1 == "POPS" %>>POPS</option>
    </select>

    <p>ジャンル2</p>
    <select name="genre2" id="genre2">
      <option value="0"></option>
      <% if @arthist.genre1 == "J-ROCK" || @arthist.genre1 == "ROCK" %>
      <option value="メロコア" <%= selected="selected" if @arthist.genre2 == "メロコア" %>>メロコア</option>
      <option value="パンク" <%= selected="selected" if @arthist.genre2 == "パンク" %>>パンク</option>
      <option value="ラウド" <%= selected="selected" if @arthist.genre2 == "ラウド" %>>ラウド</option>
      <option value="メタル" <%= selected="selected" if @arthist.genre2 == "メタル" %>>メタル</option>
      <option value="オルタナティブ" <%= selected="selected" if @arthist.genre2 == "オルタナティブ" %>>オルタナティブ</option>
      <option value="ミクスチャー" <%= selected="selected" if @arthist.genre2 == "ミクスチャー" %>>ミクスチャー</option>
      <option value="その他" <%= selected="selected" if @arthist.genre2 == "その他" %>>その他</option>
      <% elsif @arthist.genre1 == "J-POP" || @arthist.genre1 == "POPS" %>
      <option value="アニソン" <%= selected="selected" if @arthist.genre2 == "アニソン" %>>アニソン</option>
      <option value="演歌" <%= selected="selected" if @arthist.genre2 == "演歌" %>>演歌</option>
      <option value="アイドル" <%= selected="selected" if @arthist.genre2 == "アイドル" %>>アイドル</option>
      <option value="その他" <%= selected="selected" if @arthist.genre2 == "その他" %>>その他</option>
      <% end %>
    </select>

    <p>歌詞の特徴</p>
    <select name="lyrics_genre">
      <option value="0"></option>
      <option value="1" <%= selected="selected" if @arthist.lyrics_genre == 1 %>>応援</option>
      <option value="2" <%= selected="selected" if @arthist.lyrics_genre == 2 %>">政治</option>
      <option value="3" <%= selected="selected" if @arthist.lyrics_genre == 3 %>>社会</option>
      <option value="4" <%= selected="selected" if @arthist.lyrics_genre == 4 %>>恋愛</option>
      <option value="5" <%= selected="selected" if @arthist.lyrics_genre == 5 %>>季節</option>
      <option value="6" <%= selected="selected" if @arthist.lyrics_genre == 6 %>>ネタ</option>
      <option value="7" <%= selected="selected" if @arthist.lyrics_genre == 7 %>>その他</option>
    </select>

    <input type="submit" id="update_push" value="登録">
  </div>
</div>

<% end %>
